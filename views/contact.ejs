<%layout("layouts/boilerplate")-%>
<link rel="stylesheet" href="/contact.css">

<section class="container-fluid mt-5 main-container">
  <div class="row justify-content-center">
    <div class="col-md-5 col-8 mt-3">
      <div>
        <h1 class="text-center">Join My Mailing List!</h1>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-6">
        <form action="/contact" method="POST" class="needs-validation" novalidate>
          <label class="form-label mt-2 label" for="email">Email</label>
          <input
            class="form-control mb-2"
            type="email"
            id="email"
            name="email"
            required
          />
          <div class="valid-feedback">
      Looks good!
        </div>
          <button class="btn btn-dark">Submit</button>
        </form>
      

      <div class="mt-3 text-center">
        <p class="join">Join the other <%= numUsers %>  users today!</p>
      </div>
      </div>
    </div>
  
</section>
